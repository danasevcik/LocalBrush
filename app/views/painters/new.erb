<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
    <% end %>
<% end %>


# this is for a brand new painter signing up
<%= form_for @painter do |f| %>
  <%= f.label 'Username' %><br>
  <%= f.text_field :username %><br>
  <%= f.label 'Password' %><br>
  <%= f.text_field :password %><br>
  <%= f.label 'Name' %><br>
  <%= f.text_field :name %><br>
  <%= f.label 'Zip Code' %><br>
  <%= f.number_field :zip_code %><br>
  <%= f.label 'Email' %><br>
  <%= f.text_field :email %><br>
  <%= f.label 'Years of Experience' %><br>
  <%= f.number_field :y_of_exp %><br>
  <%= f.submit %>
<% end %>
