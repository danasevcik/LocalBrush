<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
    <% end %>
<% end %>

<%= form_for @room do |f| %>
  <%= f.label "Area (total square footage)" %><br>
  <%= f.number_field :area %><br>
  <%= f.label "User" %><br>
  <%= f.collection_select(:user_id, @users, :id, :name) %><br>
  <%= f.submit %>
<% end %>
