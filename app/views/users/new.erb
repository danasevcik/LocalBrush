<body>
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <%= error %>
      <% end %>
  <% end %>

  <h1>USER SIGN UP</h1>
 <%# this is for a brand new user signing up %>
   <div class="signup">
    <%= form_for @user do |f| %>
    <div class="ui equal width form">
      <div class="fields">
        <div class="field">
          <label id="text">Username</label>
          <%= f.text_field :username %>
        </div>
        <div class="field">
          <label id="text">Password</label>
          <%= f.password_field :password %>
        </div>
      </div>
      <div class="fields">
        <div class="field">
          <label id="text">Name</label>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <label id="text">Zip Code</label>
          <%= f.number_field :zip_code %>
        </div>
        <div class="field">
          <label id="text">Email</label>
          <%= f.text_field :email %>
        </div>
        <div class="field">
          <label id="text">Home Type</label>
            <select name="house_style">
              <option value="Apartment">Apartment</option>
              <option value="House">House</option>
              <option value="Condo">Condo</option>
              <option value="Townhouse">Townhouse</option>
            </select>
        </div>
      </div>
      <%= f.submit :class => 'ui submit button' %>
    </div>
    <% end %>
  </div>
</body>
