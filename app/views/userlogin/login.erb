<body id="userlogin">
<div class="ui top attached button" tabindex="0"><%= link_to("NEW USER SIGN UP", new_user_path, :method => :get, class: 'css_class', style: 'color:#e22424') %></div>
<h1>User Login</h1>

<h4><%= flash[:notice] %></h4>


<%# SEMANTICS LOGIN %>
<%= form_tag(user_login_path) do %>
  <div class="ui inverted segment">
   <div class="ui inverted form">
     <div class="two fields">
       <div class="field">
         <label>Username</label>
         <%= text_field_tag :username %>
       </div>
       <div class="field">
         <label>Password</label>
         <%= password_field_tag :password %>
       </div>
     </div>
     <!-- <div class="ui submit button">Submit</div> -->
     <%= submit_tag 'Login' %>
   </div>
  </div>
<% end %>

</body>
