<body id="leavereview">

  <h1>leave a review</h1>
  <div id="projectcard">

    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <%= error %>
      <% end %>
    <% end %>
    <%= form_for @review do |f| %>
      <%= f.label "your review" %><br>
      <%= f.text_area :content %><br>
      <%= f.label "leave a number 1-5" %><br>
      <%= f.number_field :rating %><br>
      <%= f.hidden_field :painter_id, :value => params[:painter_id] %>
      <%= f.submit %>
    <% end %>
  </div>


</body>
